{
  "name": "R Simulation Codespace",
  "image": "rocker/r-ver:latest",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
      "packages": "mice,dplyr,ggplot2,tidyr,ranger,devtools,future,furrr"
    },
    "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "reditors.vscode-r"
      ]
    }
  },
  // Run a command after creation to install your custom package dependencies if any
  "postCreateCommand": "R -e \"install.packages('clustMixType', dependencies=TRUE)\""
}